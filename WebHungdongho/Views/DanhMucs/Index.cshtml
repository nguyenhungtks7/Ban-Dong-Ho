@model IEnumerable<WebHungdongho.Models.DanhMuc>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center" >Quản lý Danh Mục</h2>

<p>
    @Html.ActionLink("Tạo danh mục", "Create", null, new { @class = "btn btn-primary btn-sm" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenDanhMuc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenDanhMuc)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaDanhMuc },new { @class = "btn btn-primary btn-sm" }) |
            @Html.ActionLink("Xem", "Details", new { id=item.MaDanhMuc }, new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaDanhMuc }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            display: flex;
            margin: 0;
            height: 100vh;
        }

        nav {
            width: 20%;
            background-color: #343a40;
            color: white;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

        .navbar-nav {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .container.body-content {
            flex: 1;
            padding: 20px;
            width:80%;
        }

        footer {
            text-align: center;
        }

        .navbar {
            width: 20%;
        }



        .user {
            position: relative;
        }

        .user-select {
            position: absolute;
            width: 224px;
            top: 14%;
            border-radius: 4px;
            background-color: #fff;
            z-index: 1;
            display: none;
            right: 14px;
            list-style: none;
            box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
            animation: fadein ease-out 0.3s;
        }

            .user-select a {
                text-decoration: none;
                font-size: 20px;
                color: #fff;
            }

            .user-select li {
                list-style: none;
                background-color: #333;
                border: solid 1px;
            }

                .user-select li:hover {
                    background-color: #fff;
                }

            .user-select a:hover {
                color: #333;
            }

        .nav-user-img {
            width: 40px;
            height: 40px;
        }

        .user-open .user-select {
            display: block;
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 flex-column">
                    <li>
                        <div class="nav-item-list user">
                            <a href="#" class="nav-item-link" style="display:flex">
                                <h4 style="color: aliceblue;line-height: 40px;   margin-right: 20px;">
                                    Xin chào,  @Session["tenUser"]
                                </h4>
                                <img class="nav-user-img" src="~/img/admin.jpg" alt="User Image">
                            </a>
                            <div class="user-select" style="top:40px;">

                                <span class="border-style"></span>

                                <ul class="user-item">
                                    <li class="user-list">
                                        @Html.ActionLink("Đổi mật khẩu", "Doimatkhau", "Index", new { }, new { @class = "btndangxuat" })
                                    </li>
                                    <li class="user-list">
                                        @Html.ActionLink("Đăng xuất", "Dangxuat", "Index", new { }, new { @class = "btndangxuat" })
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">@Html.ActionLink("Trang chủ", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Quản lý admin", "Index", "Admins", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Quản lý Khách Hàng", "Index", "Users", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Reset mật khẩu", "Resetpassword", "Users", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Quản lý Sản phẩm", "Index", "SanPhams", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Quản lý Danh Mục", "Index", "DanhMucs", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Quản lý Dơn Hàng", "Index", "DonHangs", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Quản lý Liên hệ", "Index", "LienHes", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Quản lý Phản hồi", "Index", "PhanHois", new { area = "" }, new { @class = "nav-link" })</li>
                   
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Web bán đồng hồ</p>
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
      $(document).ready(function () {
          $('.nav-item-link').click(function () {
              $('.user').toggleClass('user-open');
          });

          // Close the user-select when clicking outside of it
          $(document).click(function (event) {
              if (!$(event.target).closest('.user').length) {
                  $('.user').removeClass('user-open');
              }
          });
      });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

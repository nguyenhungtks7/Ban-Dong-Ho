@model IEnumerable<WebHungdongho.Models.PhanHoi>

@{
    ViewBag.Title = "Index";
}
<style>
    .form-horizontal {
        margin-top: 20px;
    }

    .control-label {
        font-weight: bold;
    }

    .btn-default {
        background-color: #337ab7;
        color: #fff;
    }
</style>
<h2>Quản lý phản hồi</h2>
@using (Html.BeginForm())
{
    @Html.TextBox("key")
    <input type="submit" value="Tìm kiếm" />
}
@if (!string.IsNullOrEmpty(ViewBag.cr))
{
    <p style="color:red">@ViewBag.cr</p>
}
@if (!string.IsNullOrEmpty(ViewBag.check))
{
    <p style="color:red">@ViewBag.check</p>
}
else
{
    <br />
    <br />
    <p>
        @Html.ActionLink("Tạo", "Create", null, new { @class = "btn btn-primary btn-sm" })
    </p>
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NoiDung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayPhanHoi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.HoTenDem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Ten)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NoiDung)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayPhanHoi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.HoTenDem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Ten)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaPhanHoi }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Xem", "Details", new { id = item.MaPhanHoi }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaPhanHoi }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>
}